<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/resumeOrPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play/Pause"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:textAppearanceSmall"
        />

    <TextView
        android:id="@+id/moveBackword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/resumeOrPause"
        android:layout_marginRight="10dp"
        android:text="movebackword"
        android:textAppearance="?android:textAppearanceSmall"
        />
    <TextView
        android:id="@+id/moveNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/resumeOrPause"
        android:layout_marginLeft="10dp"
        android:text="moveNext"
        android:textAppearance="?android:textAppearanceSmall"
        />
</RelativeLayout>